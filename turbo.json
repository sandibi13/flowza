{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "stream",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "env": [
        "BETTER_AUTH_SECRET",
        "DATABASE_URL",
        "DISCORD_CLIENT_ID",
        "DISCORD_CLIENT_SECRET",
        "NEXT_PUBLIC_BETTER_AUTH_URL",
        "NEXT_PUBLIC_VERCEL_URL",
        "NEXT_PUBLIC_CLIENT_NODE_ENV",
        "SERVER_NODE_ENV"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "BETTER_AUTH_SECRET",
        "DATABASE_URL",
        "DISCORD_CLIENT_ID",
        "DISCORD_CLIENT_SECRET",
        "NEXT_PUBLIC_BETTER_AUTH_URL",
        "NEXT_PUBLIC_VERCEL_URL",
        "NEXT_PUBLIC_CLIENT_NODE_ENV",
        "SERVER_NODE_ENV"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    }
  }
}
